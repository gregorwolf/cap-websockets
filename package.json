{
  "name": "cap-websockets",
  "version": "1.0.0",
  "description": "CAP WebSockets Demo",
  "repository": "",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "^20"
  },
  "dependencies": {
    "@cap-js-community/websocket": "^1.6.1",
    "@sap/cds": "^8",
    "@sap/xsenv": "^5",
    "@sap/xssec": "^4",
    "cron": "^4",
    "express": "^4",
    "node-os-utils": "^1",
    "passport": "^0",
    "ws": "^8"
  },
  "devDependencies": {
    "cds-launchpad-plugin": "^2",
    "sqlite3": "^5"
  },
  "scripts": {
    "start": "cds-serve",
    "start:hybrid": "cds watch --profile hybrid",
    "start:hybrid:approuter": "cds bind --exec -- npm run start-local --prefix approuter",
    "cs:uaa": "cf create-service xsuaa application cap-websockets-uaa -c xs-security.json",
    "bind:uaa": "cds bind auth --to cap-websockets-uaa",
    "undeploy": "cf undeploy cap-websockets --delete-service-keys --delete-services --delete-service-brokers"
  },
  "cds": {
    "requires": {
      "[production]": {
        "auth": {
          "kind": "xsuaa"
        }
      }
    }
  },
  "sapux": [
    "app/shellplugin",
    "app/test"
  ],
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  }
}
