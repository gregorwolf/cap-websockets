{
  "name": "cap-websockets",
  "version": "1.0.0",
  "description": "CAP WebSockets Demo",
  "repository": "",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^6.0.2",
    "@sap/xssec": "^3.2.13",
    "@sap/xsenv": "^3.3.2",
    "cron": "^2.0.0",
    "express": "^4.18.1",
    "node-os-utils": "^1.3.7",
    "passport": "^0.6.0",
    "ws": "^8.8.0"
  },
  "devDependencies": {
    "sqlite3": "^5.0.8"
  },
  "scripts": {
    "start": "cds run",
    "bind:uaa": "cds bind uaa --to cap-websockets-uaa"
  },
  "cds": {
    "requires": {
      "auth": {
        "kind": "basic-auth"
      },
      "[production]": {
        "auth": {
          "kind": "xsuaa"
        }
      }
    }
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  }
}
