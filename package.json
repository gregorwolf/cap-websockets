{
  "name": "cap-websockets",
  "version": "1.0.0",
  "description": "CAP WebSockets Demo",
  "repository": "",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "^16"
  },
  "dependencies": {
    "@sap/cds": "^6",
    "@sap/xssec": "^3",
    "@sap/xsenv": "^3",
    "cron": "^2",
    "express": "^4",
    "node-os-utils": "^1",
    "passport": "^0",
    "ws": "^8"
  },
  "devDependencies": {
    "sqlite3": "^5"
  },
  "scripts": {
    "start": "cds run",
    "bind:uaa": "cds bind auth --to cap-websockets-uaa",
    "undeploy": "cf undeploy cap-websockets --delete-service-keys --delete-services --delete-service-brokers"
  },
  "cds": {
    "requires": {
      "auth": {
        "kind": "basic-auth"
      },
      "[production]": {
        "auth": {
          "kind": "xsuaa"
        }
      }
    }
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  }
}
